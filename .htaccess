# HotelOS Root .htaccess
# URL Rewriting + Security

# ============================================
# URL REWRITING (Required for routing)
# ============================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Force HTTPS (uncomment if needed)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Route /assets/ to /public/assets/ (for MilesWeb compatibility)
    RewriteRule ^assets/(.*)$ public/assets/$1 [L,NC]
    
    # Don't rewrite if file or directory exists
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Route everything to index.php (root level)
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# ============================================
# SECURITY
# ============================================

# Disable directory browsing
Options -Indexes

# Prevent access to hidden files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to sensitive file types
<FilesMatch "\.(sql|log|md|json|lock|env)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# PHP Security Settings
<IfModule mod_php.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log logs/php_errors.log
</IfModule>
